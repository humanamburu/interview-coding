{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2020.Promise", "ES2019"],
        "module": "commonjs",
        "baseUrl": "src",
        "outDir": "./build",
        "declaration": true,
        "types": ["node", "jest"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "rootDir": "src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "preserveSymlinks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"]
}
